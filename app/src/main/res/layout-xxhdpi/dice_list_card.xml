<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        app:cardBackgroundColor="@color/LSilver"
        app:cardCornerRadius="3dp"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/Dark"
                android:textSize="18sp"
                tools:text="TITLE"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:id="@+id/sayi1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="5dp"
                android:textColor="@color/Dark"
                android:textSize="15sp"
                tools:text="SAYI1"
                android:layout_marginLeft="10dp"/>


            <TextView
                android:id="@+id/tip1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/sayi1"
                android:textColor="@color/Dark"
                android:textSize="15sp"
                tools:text="TIP1" />

            <TextView
                android:id="@+id/ek1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tip1"
                android:textColor="@color/Dark"
                android:textSize="15sp"
                tools:text="EK1" />

            <TextView
                android:id="@+id/sus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/ek1"
                android:text="/"
                android:textColor="@color/Dark"
                android:textSize="15sp"
                tools:text="EK1" />

            <TextView
                android:id="@+id/sayi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/sus"
                android:textColor="@color/Dark"
                android:textSize="15sp"
                tools:text="SAYÄ°2" />

            <TextView
                android:id="@+id/tip2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/sayi2"
                android:textColor="@color/Dark"
                android:textSize="15sp"
                tools:text="TIP2" />

            <TextView
                android:id="@+id/ek2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/tip2"
                android:textColor="@color/Dark"
                android:textSize="15sp"
                tools:text="EK2" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>